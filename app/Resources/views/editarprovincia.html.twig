{% extends 'templates/template.html.twig' %}

{% block title %}
Editar provincia
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    
    <div class="container">
       
                         
        {% for msg in app.flashes('success') %}
            <div class="alerta-success">
                {{ msg }}
            </div>
        {% endfor %}
                        
        
        <section class="content-box">

            <nav class="menu-page">
                <ul>
                        
                    <li>
                        <a href="{{ path('provincias') }}" >Lista de provincias</a>
                    </li>
                
                    <li>|</li>

                    <li>
                        <a href="{{ path('provincias') }}/{{ provincia.id }}" >Volver al detalle de {{ provincia.descripcion }}</a>
                    </li>
                    
                </ul>

            </nav>
            
            <div>
                <h2 class="paises-title">Editar provincia</h2>
            </div>
            
            <div>
                    
                <form class="form-style1" action="{{ path('editarProvincia', {'id': provincia.id }) }}" method="POST">
                    <div class="form-group">
                        <label for="provincia">Nombre:</label>
                        <input class="form-control" type="text" name="pais" id="provincia" value="" placeholder="{{ provincia.descripcion }}">
                    </div>
                    
                    <div class="form-group">
                        <label for="abrev">Abreviaci√≥n:</label>
                        <input class="form-control" type="text" name="abrev" id="abrev" value="" placeholder="{{ provincia.abrev }}">
                    </div>

                    <div class="form-group">
                            <label for="pais">Pais:</label>
                            <select class="form-control" name="paisId" id="pais">
                                {% for pais in paises %}
                                    <option value="{{pais.id}}" 
                                    
                                    {% if pais.id == provincia.pais.id %}
                                        selected    
                                    {% endif %}
                                    
                                    > {{ pais.descripcion }} </option>
                                {% endfor %}
                            </select>
                    </div>

                    <div class="form-group">
                        <label for="activo">Estado:</label>
                        <select class="form-control" name="activo" id="activo">
                            <option value="1" {% if provincia.activo == "1" %} selected {% endif %}>Activo</option>
                            <option value="0" {% if provincia.activo == "0" %} selected {% endif %} >No activo</option>
                        </select>
                    </div>

                    <input type="hidden" name="action" value="guardar">

                    <div class="form-btn-center">
                        <button type="submit" class="btn-style1">Guardar</button>
                    </div>

                </form>
        
               
            </div>
        </section>
       
    </div>

{% endblock %}


